{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",

    "strict": true, // will automatically emit "use strict" on source files

    "useDefineForClassFields": true, // https://backbencher.dev/javascript-class-field-declarations
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "allowJs": false, // allow js modules, on deno this is true
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "jsx": "react-jsx", // https://reactjs.org/blog/2020/09/22/introducing-the-new-jsx-transform.html

    "esModuleInterop": true, // on Deno this is true
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "isolatedModules": true,

    "noEmit": true,

    "noErrorTruncation": false,
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
